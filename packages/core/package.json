{
  "name": "@kataribe/core",
  "version": "0.4.0",
  "description": "Core types and utilities for kataribe - bidirectional RPC + events",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yamayuski/kataribe.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest"
  },
  "keywords": [
    "rpc",
    "typescript",
    "types",
    "envelope",
    "core"
  ],
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  }
}
