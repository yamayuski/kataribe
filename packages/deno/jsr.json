{
  "name": "@kataribe/deno",
  "version": "0.4.0",
  "exports": "./src/index.ts",
  "tasks": {
    "check": "deno fmt --check && deno lint",
    "fmt": "deno fmt",
    "test": "deno test --allow-net"
  },
  "publish": {
    "include": ["src/**/*.ts", "LICENSE", "README.md"],
    "exclude": ["**/node_modules/**", "**/*.test.ts"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true
  }
}
