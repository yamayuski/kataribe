{
  "name": "kataribe-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "Bidirectional (clientâ†”server) RPC + events over WebSocket with type-safe unknown-only envelopes.",
  "license": "MIT",
  "type": "module",
  "author": {
    "email": "m.yamagishi90+git@gmail.com",
    "name": "Masaru Yamagishi",
    "url": "https://cafe-capy.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yamayuski/kataribe.git"
  },
  "bugs": {
    "url": "https://github.com/yamayuski/kataribe/issues"
  },
  "homepage": "https://github.com/yamayuski/kataribe",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prebuild": "pnpm --recursive --parallel exec rimraf dist",
    "build": "pnpm --filter \"@kataribe/core\" run build && pnpm --recursive --parallel --if-present --filter=!@kataribe/core run build",
    "test": "pnpm --recursive --parallel --if-present run test",
    "prepublishOnly": "pnpm run build",
    "publish:jsr": "pnpm --recursive --filter=@kataribe/core --filter=@kataribe/browser --filter=@kataribe/deno exec jsr publish",
    "ci:version": "pnpm exec changeset version",
    "ci:publish": "pnpm exec changeset publish",
    "format": "biome check --write --unsafe",
    "lint": "biome lint",
    "check": "biome ci",
    "dev:server": "tsx examples/nodejs-ws/server.ts",
    "dev:client": "tsx examples/nodejs-ws/client.ts",
    "dev:deno": "deno run --allow-net examples/deno-ws/server.ts",
    "dev:bun": "bun examples/bun-ws/server.ts"
  },
  "keywords": [
    "rpc",
    "websocket",
    "typescript",
    "bidirectional",
    "events",
    "envelope",
    "monorepo"
  ],
  "engines": {
    "node": ">=22",
    "npm": "use pnpm",
    "pnpm": ">=10.17.1",
    "yarn": "use pnpm"
  },
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@changesets/cli": "^2.29.7",
    "@tsconfig/recommended": "^1.0.10",
    "@types/node": "catalog:",
    "@types/ws": "catalog:",
    "jsr": "^0.13.5",
    "rimraf": "^6.0.1",
    "tsdown": "^0.15.4",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
